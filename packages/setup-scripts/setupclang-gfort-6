#!/data/data/com.termux/files/usr/bin/sh
cd /data/data/com.termux/files/usr/bin
if ! [ -e gfortran-6 ]; then
	echo "install gcc-6 to use gfortran-6"
	exit
fi
rm gcc
rm g++
rm cpp
ln -sf gfortran-6 gfortran
ln -s clang gcc
ln -s clang g++
ln -s clang cpp
ln -sf gcc cc
ln -sf g++ c++
echo "now using clang as default compiler with gfortran-6"
